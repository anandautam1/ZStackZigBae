    530            if( macSrcMatchAddrMode == SADDR_MODE_EXT )
    531            {
    532              index *= 2;
    533            }
    534            
    535            enable = MAC_RADIO_SRC_MATCH_GET_EN();
    536               
    537            if( enable & ( (uint24)0x01 << index ) )
    538            {
    539              return TRUE;
    540            }
    541          
    542            return FALSE; 
    543          }
