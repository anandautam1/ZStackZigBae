    350            if ((i = macPibIndex(pibAttribute)) == MAC_PIB_INVALID)
    351            {
    352              return MAC_UNSUPPORTED_ATTRIBUTE;
    353            }
    354          
    355            /* do range check; no range check if min and max are zero */
    356            if ((macPibTbl[i].min != 0) || (macPibTbl[i].max != 0))
