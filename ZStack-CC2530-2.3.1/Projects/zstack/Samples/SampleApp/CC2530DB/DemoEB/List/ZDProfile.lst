   1899            uint8 handled;
   1900            zdoIncomingMsg_t inMsg;
   1901          
   1902            inMsg.srcAddr.addrMode = Addr16Bit;
   1903            inMsg.srcAddr.addr.shortAddr = pData->srcAddr.addr.shortAddr;
