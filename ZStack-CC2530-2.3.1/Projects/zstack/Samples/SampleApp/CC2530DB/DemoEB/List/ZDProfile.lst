    847            {
    848              *pBuf++ = len - 4;   // Simple descriptor length
    849          
    850              *pBuf++ = pSimpleDesc->EndPoint;
    851              *pBuf++ = LO_UINT16( pSimpleDesc->AppProfId );
    852              *pBuf++ = HI_UINT16( pSimpleDesc->AppProfId );
    853              *pBuf++ = LO_UINT16( pSimpleDesc->AppDeviceId );
